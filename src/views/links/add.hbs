<div class="box addlink">
    <h3>Añade un link</h3>
    <form action="/links/add" method="POST">
        <div class="input">
            <input type="url" name="enlace" placeholder="Enlace" autofocus>
        </div>

        <div class="input">
            <input type="text" name="titulo" placeholder="Título" maxlength="15">
        </div>

        <div class="input">
            <input type="text" name="descripcion" placeholder="Descripción">
        </div>

        <div class="btn">
            <select class="select" name="carpeta" id="carpeta">
                <option value="" selected>
                    Carpeta
                </option>
                {{#each folders }}
                    <option value="{{id}}">{{nombre}}</option>
                {{/each }}
            </select>
            <button>Guardar</button>
        </div>
    </form>
</div>