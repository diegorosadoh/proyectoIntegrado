<div class="box alllinks">
    {{#each links}}
        <div class="link">
            <a class="title" href="{{enlace}}" target="_blank">
                <h3>{{titulo}}</h3>
            </a>

            <div class="date">
                <p>{{fecha}}
                    <span>{{hora}}</span>
                </p>
            </div>

            <div class="functions">
                <a class="edit" href="/links/edit/{{id}}">
                    <i class="fa-solid fa-pen-to-square"></i>
                </a>

                <div class="desc">
                    {{descripcion}}
                </div>

                <a class="delete" href="/links/delete/{{id}}">
                    <i class="fa-solid fa-trash-alt"></i>
                </a>
            </div>            
        </div>
    {{else}}
        <div class="nolinks">
            <h4>
                No hay enlaces guardados
            </h4>
            <a href="/links/add">Â¡Crea uno!</a>
        </div>
    {{/each}}
</div>